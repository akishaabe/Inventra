##############################################
# Inventra Production Environment (.env)
# Copy to .env and fill values before deploy
##############################################

# --- MySQL ---
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=inventra
MYSQL_USER=inventra
MYSQL_PASSWORD=

# --- Backend (Node/Express) ---
PORT=4000
DB_HOST=mysql
DB_USER=root
DB_PASSWORD=
DB_NAME=inventra

# SMTP for Nodemailer
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=no-reply@cafe-inventra.com

# Security
# JWT_SECRET is optional in current backend (no JWT issued at the moment).
# You can leave it blank or set any long random string for future use.
JWT_SECRET=

# CORS: Comma-separated list of allowed origins (no spaces)
# Example: https://admin.cafe-inventra.com,https://supad.cafe-inventra.com,https://staff.cafe-inventra.com,https://shared.cafe-inventra.com
ALLOWED_ORIGINS=

# ML service (reachable inside Docker network)
ML_SERVICE_URL=http://ml_service:5000/forecast

# Optional external exposure of ML service
EXPOSE_ML_SERVICE=false

# --- ML Service DB access ---
ML_DB_HOST=mysql
ML_DB_USER=inventra
ML_DB_PASS=
ML_DB_NAME=inventra
